---
interface Props {
  text: string;
}

const { text } = Astro.props;
---

<button
  class="btn bg-gray-300 dark:bg-gray-700 border hover:bg-opacity-70 border-gray-300 dark:border-gray-600 md:btn-md btn-sm text-sm md:text-lg text-gray-500 dark:text-gray-300 hover:text-white hover:border-gray-500 dark:hover:border-gray-300 hover:bg-gray-500 dark:hover:bg-gray-500"
>
  <slot />
  {text}</button
>
