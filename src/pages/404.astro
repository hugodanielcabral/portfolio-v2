---
import BlogLayout from "../layouts/BlogLayout.astro";
---

<BlogLayout title="404">
  <div class="grid h-96 place-content-center px-4">
    <div class="text-center">
      <h1 class="text-9xl font-black text-gray-400 dark:text-gray-200">404</h1>

      <p
        class="text-2xl font-bold tracking-tight dark:text-gray-500 text-gray-900 sm:text-4xl"
      >
        Ups
      </p>

      <p class="mt-4 text-gray-400">No se encontró la página solicitada.</p>

      <a
        href="/"
        class="btn bg-gray-300 dark:bg-gray-700 hover:bg-opacity-70 border-gray-400 dark:border-gray-600 md:btn-md btn-xs sm:text-sm text-sm md:text-lg text-gray-600 dark:text-gray-300 hover:text-white hover:border-gray-500 dark:hover:border-gray-300 hover:bg-gray-500 dark:hover:bg-gray-500 border mt-2"
      >
        Volver a Inicio
      </a>
    </div>
  </div>
</BlogLayout>
